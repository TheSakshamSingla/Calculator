<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/top_app_bar"
            app:title="@string/app_name" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Display section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/displayCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toTopOf="@id/calculationDisplay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/display"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|bottom"
                android:padding="16dp"
                android:text="0"
                android:textSize="40sp"
                android:textAppearance="?attr/textAppearanceHeadline3" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/calculationDisplay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:padding="8dp"
            android:textAppearance="?attr/textAppearanceBody1"
            app:layout_constraintBottom_toTopOf="@id/buttonGrid"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/displayCard" />

        <!-- Calculator buttons -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttonGrid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calculationDisplay">

            <!-- Standard Calculator Layout -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/standardCalculator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <!-- Row 1 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnClear"
                    style="@style/Widget.Calculator.Button.Clear"
                    android:text="@string/clear"
                    app:layout_constraintBottom_toTopOf="@id/btn7"
                    app:layout_constraintEnd_toStartOf="@id/btnOpenParenthesis"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpenParenthesis"
                    style="@style/Widget.Calculator.Button.Operator"
                    android:text="@string/parenthesis_open"
                    app:layout_constraintBottom_toTopOf="@id/btn8"
                    app:layout_constraintEnd_toStartOf="@id/btnCloseParenthesis"
                    app:layout_constraintStart_toEndOf="@id/btnClear"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCloseParenthesis"
                    style="@style/Widget.Calculator.Button.Operator"
                    android:text="@string/parenthesis_close"
                    app:layout_constraintBottom_toTopOf="@id/btn9"
                    app:layout_constraintEnd_toStartOf="@id/btnBackspace"
                    app:layout_constraintStart_toEndOf="@id/btnOpenParenthesis"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBackspace"
                    style="@style/Widget.Calculator.Button.Operator"
                    app:icon="@drawable/ic_backspace"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:layout_constraintBottom_toTopOf="@id/btnDivide"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btnCloseParenthesis"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Row 2 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn7"
                    style="@style/Widget.Calculator.Button.Number"
                    android:text="7"
                    app:layout_constraintBottom_toTopOf="@id/btn4"
                    app:layout_constraintEnd_toStartOf="@id/btn8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btnClear" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn8"
                    style="@style/Widget.Calculator.Button.Number"
                    android:text="8"
                    app:layout_constraintBottom_toTopOf="@id/btn5"
                    app:layout_constraintEnd_toStartOf="@id/btn9"
                    app:layout_constraintStart_toEndOf="@id/btn7"
                    app:layout_constraintTop_toBottomOf="@id/btnOpenParenthesis" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn9"
                    style="@style/Widget.Calculator.Button.Number"
                    android:text="9"
                    app:layout_constraintBottom_toTopOf="@id/btn6"
                    app:layout_constraintEnd_toStartOf="@id/btnDivide"
                    app:layout_constraintStart_toEndOf="@id/btn8"
                    app:layout_constraintTop_toBottomOf="@id/btnCloseParenthesis" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDivide"
                    style="@style/Widget.Calculator.Button.Operator"
                    android:text="@string/divide"
                    app:layout_constraintBottom_toTopOf="@id/btnMultiply"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn9"
                    app:layout_constraintTop_toBottomOf="@id/btnBackspace" />

                <!-- Row 3 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn4"
                    style="@style/Widget.Calculator.Button.Number"
                    android:text="4"
                    app:layout_constraintBottom_toTopOf="@id/btn1"
                    app:layout_constraintEnd_toStartOf="@id/btn5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn7" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn5"
                    style="@style/Widget.Calculator.Button.Number"
                    android:text="5"
                    app:layout_constraintBottom_toTopOf="@id/btn2"
                    app:layout_constraintEnd_toStartOf="@id/btn6"
                    app:layout_constraintStart_toEndOf="@id/btn4"
                    app:layout_constraintTop_toBottomOf="@id/btn8" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn6"
                    style="@style/Widget.Calculator.Button.Number"
                    android:text="6"
                    app:layout_constraintBottom_toTopOf="@id/btn3"
                    app:layout_constraintEnd_toStartOf="@id/btnMultiply"
                    app:layout_constraintStart_toEndOf="@id/btn5"
                    app:layout_constraintTop_toBottomOf="@id/btn9" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMultiply"
                    style="@style/Widget.Calculator.Button.Operator"
                    android:text="@string/multiply"
                    app:layout_constraintBottom_toTopOf="@id/btnSubtract"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn6"
                    app:layout_constraintTop_toBottomOf="@id/btnDivide" />

                <!-- Row 4 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn1"
                    style="@style/Widget.Calculator.Button.Number"
                    android:text="1"
                    app:layout_constraintBottom_toTopOf="@id/btnPercent"
                    app:layout_constraintEnd_toStartOf="@id/btn2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn4" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn2"
                    style="@style/Widget.Calculator.Button.Number"
                    android:text="2"
                    app:layout_constraintBottom_toTopOf="@id/btn0"
                    app:layout_constraintEnd_toStartOf="@id/btn3"
                    app:layout_constraintStart_toEndOf="@id/btn1"
                    app:layout_constraintTop_toBottomOf="@id/btn5" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn3"
                    style="@style/Widget.Calculator.Button.Number"
                    android:text="3"
                    app:layout_constraintBottom_toTopOf="@id/btnDecimal"
                    app:layout_constraintEnd_toStartOf="@id/btnSubtract"
                    app:layout_constraintStart_toEndOf="@id/btn2"
                    app:layout_constraintTop_toBottomOf="@id/btn6" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSubtract"
                    style="@style/Widget.Calculator.Button.Operator"
                    android:text="@string/subtract"
                    app:layout_constraintBottom_toTopOf="@id/btnAdd"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn3"
                    app:layout_constraintTop_toBottomOf="@id/btnMultiply" />

                <!-- Row 5 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPercent"
                    style="@style/Widget.Calculator.Button.Operator"
                    android:text="@string/percent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn0"
                    style="@style/Widget.Calculator.Button.Number"
                    android:text="0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btnDecimal"
                    app:layout_constraintStart_toEndOf="@id/btnPercent"
                    app:layout_constraintTop_toBottomOf="@id/btn2" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDecimal"
                    style="@style/Widget.Calculator.Button.Number"
                    android:text="@string/decimal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btnAdd"
                    app:layout_constraintStart_toEndOf="@id/btn0"
                    app:layout_constraintTop_toBottomOf="@id/btn3" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAdd"
                    style="@style/Widget.Calculator.Button.Operator"
                    android:text="@string/add"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btnDecimal"
                    app:layout_constraintTop_toBottomOf="@id/btnSubtract" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Scientific Calculator Layout (Initially Hidden) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/scientificCalculator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
                
                <!-- Scientific Calculator buttons will be added here -->
                <!-- Row 1 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSin"
                    style="@style/Widget.Calculator.Button.Operator"
                    android:text="@string/sin"
                    app:layout_constraintBottom_toTopOf="@id/btnCos"
                    app:layout_constraintEnd_toStartOf="@id/btnLn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLn"
                    style="@style/Widget.Calculator.Button.Operator"
                    android:text="@string/ln"
                    app:layout_constraintBottom_toTopOf="@id/btnLog"
                    app:layout_constraintEnd_toStartOf="@id/btnPi"
                    app:layout_constraintStart_toEndOf="@id/btnSin"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPi"
                    style="@style/Widget.Calculator.Button.Operator"
                    android:text="@string/pi"
                    app:layout_constraintBottom_toTopOf="@id/btnE"
                    app:layout_constraintEnd_toStartOf="@id/btnScientificClear"
                    app:layout_constraintStart_toEndOf="@id/btnLn"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScientificClear"
                    style="@style/Widget.Calculator.Button.Clear"
                    android:text="@string/clear"
                    app:layout_constraintBottom_toTopOf="@id/btnScientificBackspace"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btnPi"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Row 2 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCos"
                    style="@style/Widget.Calculator.Button.Operator"
                    android:text="@string/cos"
                    app:layout_constraintBottom_toTopOf="@id/btnTan"
                    app:layout_constraintEnd_toStartOf="@id/btnLog"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btnSin" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLog"
                    style="@style/Widget.Calculator.Button.Operator"
                    android:text="@string/log"
                    app:layout_constraintBottom_toTopOf="@id/btnSquare"
                    app:layout_constraintEnd_toStartOf="@id/btnE"
                    app:layout_constraintStart_toEndOf="@id/btnCos"
                    app:layout_constraintTop_toBottomOf="@id/btnLn" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnE"
                    style="@style/Widget.Calculator.Button.Operator"
                    android:text="@string/e"
                    app:layout_constraintBottom_toTopOf="@id/btnPower"
                    app:layout_constraintEnd_toStartOf="@id/btnScientificBackspace"
                    app:layout_constraintStart_toEndOf="@id/btnLog"
                    app:layout_constraintTop_toBottomOf="@id/btnPi" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScientificBackspace"
                    style="@style/Widget.Calculator.Button.Operator"
                    app:icon="@drawable/ic_backspace"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:layout_constraintBottom_toTopOf="@id/btnScientificDivide"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btnE"
                    app:layout_constraintTop_toBottomOf="@id/btnScientificClear" />

                <!-- Additional scientific calculator rows -->
                <!-- Row 3 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTan"
                    style="@style/Widget.Calculator.Button.Operator"
                    android:text="@string/tan"
                    app:layout_constraintBottom_toTopOf="@id/btnScientific7"
                    app:layout_constraintEnd_toStartOf="@id/btnSquare"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btnCos" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSquare"
                    style="@style/Widget.Calculator.Button.Operator"
                    android:text="@string/square"
                    app:layout_constraintBottom_toTopOf="@id/btnScientific8"
                    app:layout_constraintEnd_toStartOf="@id/btnPower"
                    app:layout_constraintStart_toEndOf="@id/btnTan"
                    app:layout_constraintTop_toBottomOf="@id/btnLog" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPower"
                    style="@style/Widget.Calculator.Button.Operator"
                    android:text="@string/power"
                    app:layout_constraintBottom_toTopOf="@id/btnScientific9"
                    app:layout_constraintEnd_toStartOf="@id/btnScientificDivide"
                    app:layout_constraintStart_toEndOf="@id/btnSquare"
                    app:layout_constraintTop_toBottomOf="@id/btnE" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScientificDivide"
                    style="@style/Widget.Calculator.Button.Operator"
                    android:text="@string/divide"
                    app:layout_constraintBottom_toTopOf="@id/btnScientificMultiply"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btnPower"
                    app:layout_constraintTop_toBottomOf="@id/btnScientificBackspace" />

                <!-- Rest of scientific calculator buttons... -->
                <!-- Same layout as standard calculator for number buttons -->

                <!-- Row 4: Numbers 7-9 and multiply -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScientific7"
                    style="@style/Widget.Calculator.Button.Number"
                    android:text="7"
                    app:layout_constraintBottom_toTopOf="@id/btnScientific4"
                    app:layout_constraintEnd_toStartOf="@id/btnScientific8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btnTan" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScientific8"
                    style="@style/Widget.Calculator.Button.Number"
                    android:text="8"
                    app:layout_constraintBottom_toTopOf="@id/btnScientific5"
                    app:layout_constraintEnd_toStartOf="@id/btnScientific9"
                    app:layout_constraintStart_toEndOf="@id/btnScientific7"
                    app:layout_constraintTop_toBottomOf="@id/btnSquare" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScientific9"
                    style="@style/Widget.Calculator.Button.Number"
                    android:text="9"
                    app:layout_constraintBottom_toTopOf="@id/btnScientific6"
                    app:layout_constraintEnd_toStartOf="@id/btnScientificMultiply"
                    app:layout_constraintStart_toEndOf="@id/btnScientific8"
                    app:layout_constraintTop_toBottomOf="@id/btnPower" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScientificMultiply"
                    style="@style/Widget.Calculator.Button.Operator"
                    android:text="@string/multiply"
                    app:layout_constraintBottom_toTopOf="@id/btnScientificSubtract"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btnScientific9"
                    app:layout_constraintTop_toBottomOf="@id/btnScientificDivide" />

                <!-- Row 5: Numbers 4-6 and subtract -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScientific4"
                    style="@style/Widget.Calculator.Button.Number"
                    android:text="4"
                    app:layout_constraintBottom_toTopOf="@id/btnScientific1"
                    app:layout_constraintEnd_toStartOf="@id/btnScientific5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btnScientific7" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScientific5"
                    style="@style/Widget.Calculator.Button.Number"
                    android:text="5"
                    app:layout_constraintBottom_toTopOf="@id/btnScientific2"
                    app:layout_constraintEnd_toStartOf="@id/btnScientific6"
                    app:layout_constraintStart_toEndOf="@id/btnScientific4"
                    app:layout_constraintTop_toBottomOf="@id/btnScientific8" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScientific6"
                    style="@style/Widget.Calculator.Button.Number"
                    android:text="6"
                    app:layout_constraintBottom_toTopOf="@id/btnScientific3"
                    app:layout_constraintEnd_toStartOf="@id/btnScientificSubtract"
                    app:layout_constraintStart_toEndOf="@id/btnScientific5"
                    app:layout_constraintTop_toBottomOf="@id/btnScientific9" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScientificSubtract"
                    style="@style/Widget.Calculator.Button.Operator"
                    android:text="@string/subtract"
                    app:layout_constraintBottom_toTopOf="@id/btnScientificAdd"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btnScientific6"
                    app:layout_constraintTop_toBottomOf="@id/btnScientificMultiply" />

                <!-- Row 6: Numbers 1-3 and add -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScientific1"
                    style="@style/Widget.Calculator.Button.Number"
                    android:text="1"
                    app:layout_constraintBottom_toTopOf="@id/btnScientificZero"
                    app:layout_constraintEnd_toStartOf="@id/btnScientific2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btnScientific4" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScientific2"
                    style="@style/Widget.Calculator.Button.Number"
                    android:text="2"
                    app:layout_constraintBottom_toTopOf="@id/btnScientificDecimal"
                    app:layout_constraintEnd_toStartOf="@id/btnScientific3"
                    app:layout_constraintStart_toEndOf="@id/btnScientific1"
                    app:layout_constraintTop_toBottomOf="@id/btnScientific5" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScientific3"
                    style="@style/Widget.Calculator.Button.Number"
                    android:text="3"
                    app:layout_constraintBottom_toTopOf="@id/btnScientificEquals"
                    app:layout_constraintEnd_toStartOf="@id/btnScientificAdd"
                    app:layout_constraintStart_toEndOf="@id/btnScientific2"
                    app:layout_constraintTop_toBottomOf="@id/btnScientific6" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScientificAdd"
                    style="@style/Widget.Calculator.Button.Operator"
                    android:text="@string/add"
                    app:layout_constraintBottom_toTopOf="@id/btnScientificEquals"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btnScientific3"
                    app:layout_constraintTop_toBottomOf="@id/btnScientificSubtract" />

                <!-- Row 7: Zero, decimal and equals -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScientificZero"
                    style="@style/Widget.Calculator.Button.Number"
                    android:text="0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btnScientificDecimal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btnScientific1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScientificDecimal"
                    style="@style/Widget.Calculator.Button.Number"
                    android:text="@string/decimal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btnScientificEquals"
                    app:layout_constraintStart_toEndOf="@id/btnScientificZero"
                    app:layout_constraintTop_toBottomOf="@id/btnScientific2" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScientificEquals"
                    style="@style/Widget.Calculator.Button.Equals"
                    android:text="@string/equals"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btnScientificDecimal"
                    app:layout_constraintTop_toBottomOf="@id/btnScientificAdd" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            
            <!-- FAB for Equals button in standard mode -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabEquals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/equals"
                android:src="@android:drawable/ic_menu_send"
                android:text="@string/equals"
                app:backgroundTint="@color/equals_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="@color/on_primary" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <!-- History Sheet -->
    <com.google.android.material.bottomsheet.BottomSheetBehavior
        android:id="@+id/historyBottomSheetBehavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp">
        
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="@string/history"
                    android:textAppearance="?attr/textAppearanceHeadline6" />
                
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/historyRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="80dp" />
            </LinearLayout>
