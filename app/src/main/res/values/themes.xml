<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme using Material Design 3 -->
    <style name="Theme.Calculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        
        <!-- Status bar and background colors -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:windowBackground">@color/background</item>
        
        <!-- Enable dynamic color if available (Android 12+) -->
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.Calculator.Button</item>
    </style>

    <!-- Button styles for calculator -->
    <style name="Widget.Calculator.Button" parent="Widget.Material3.Button.TextButton">
        <item name="android:textSize">24sp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>
    
    <!-- Number button style -->
    <style name="Widget.Calculator.Button.Number" parent="Widget.Calculator.Button">
        <item name="backgroundTint">@color/number_color</item>
    </style>
    
    <!-- Operator button style -->
    <style name="Widget.Calculator.Button.Operator" parent="Widget.Calculator.Button">
        <item name="backgroundTint">@color/operator_color</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>
    
    <!-- Equals button style -->
    <style name="Widget.Calculator.Button.Equals" parent="Widget.Calculator.Button">
        <item name="backgroundTint">@color/equals_color</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>
    
    <!-- Clear button style -->
    <style name="Widget.Calculator.Button.Clear" parent="Widget.Calculator.Button">
        <item name="backgroundTint">@color/clear_color</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>
</resources>